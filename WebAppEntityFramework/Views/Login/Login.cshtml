@model WebAppEntityFramework.Models.user
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
</head>
<body>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <div class="container-fluid">
        @*<form style="font-family:Arial" method="post">
                User Name :- <input type="text" name="usernaeme" /><br />
